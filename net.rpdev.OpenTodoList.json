{
    "id": "net.rpdev.OpenTodoList",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "OpenTodoList",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri"
    ],

    "modules": [
        {
            "name": "libsecret",
            "config-opts": [
                "--disable-static",
                "--disable-gtk-doc",
                "--disable-manpages"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.6/libsecret-0.18.6.tar.gz",
                    "sha256": "f4fa198d4e131f94d9ec84cfeaf6c124245e7ff3c0af11c76cc35332bfae5585"
                }
            ]
        },
        {
            "name": "opentodolist",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/rpdev/opentodolist.git",
                    /* Build latest release */
                    /* "tag": "3.10.1", */
                    
                    /* hot fix: showdown.js cannot be loaded with Qt 5.12.1 */
                    "commit": "2ebf41d794ee9936f84c1206b6664ab5433e2f9f"
                }
            ]
        }
    ]
}
