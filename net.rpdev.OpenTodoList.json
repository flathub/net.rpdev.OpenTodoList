{
    "id": "net.rpdev.OpenTodoList",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "OpenTodoList",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--device=shm",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],
    "modules": [
        "shared-modules/libsecret/libsecret.json",
        {
            "name": "opentodolist",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DOPENTODOLIST_FLATPAK=ON",
                "-DOPENTODOLIST_WITH_KNOTIFICATIONS=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/rpdev/opentodolist.git",

                    /* Build tag */
                    
                    "tag": "3.38.0"                    

                    /* Build specific commit */
                    /*
                    "branch": "development",
                    "commit": "958abe75bb326abe4f699bcaaf4bb410f200302f"
                    */
                },
                {
                    "type": "shell",
                    "commands": [
                        "mkdir -p /app/usr",
                        "ln -s /app/share /app/usr/share"
                    ]
                }
            ]
        }
    ]
}
