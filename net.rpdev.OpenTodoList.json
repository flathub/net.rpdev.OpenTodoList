{
    "id": "net.rpdev.OpenTodoList",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "OpenTodoList",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets"
    ],
    "modules": [
        "shared-modules/libsecret/libsecret.json",
        {
            "name": "opentodolist",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=release",
                "INSTALL_PREFIX=/app",
                "CONFIG+=opentodolist_flatpak"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/rpdev/opentodolist.git",

                    /* Build tag */
                    /*
                    "tag": "3.26.0"
                    */

                    /* Build specific commit */
                    "branch": "master",
                    "commit": "512f54a9db7a899a99c5a6b39a59e04aeacc2f6e"
                }
            ]
        }
    ]
}
